<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bodyBG"
    tools:context=".SerialHome">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--CardView Person 1 & 2-->
            <LinearLayout style="@style/cardViewLinearArea">

                <!--CardView Person 1-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/nupurDaBookPageId"
                    style="@style/cardViewPerson">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/person1ImageView1Id"
                            style="@style/cardViewImageView"
                            android:src="@drawable/image_placeholder"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/person1NameTextViewId"
                            style="@style/cardViewTextView" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--CardView Person 2-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/person2BookPageId"
                    style="@style/cardViewPerson"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/person2ImageView1Id"
                            style="@style/cardViewImageView"
                            android:src="@drawable/image_placeholder"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/person2NameTextViewId"
                            style="@style/cardViewTextView" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--CardView Person 3 & 4-->
            <LinearLayout style="@style/cardViewLinearArea">

                <!--CardView Person 1-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/person3BookPageId"
                    style="@style/cardViewPerson">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/person3ImageView1Id"
                            style="@style/cardViewImageView"
                            android:src="@drawable/image_placeholder"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/person3NameTextViewId"
                            style="@style/cardViewTextView" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--CardView Person 2-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/person4BookPageId"
                    style="@style/cardViewPerson"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/person4ImageView1Id"
                            style="@style/cardViewImageView"
                            android:src="@drawable/image_placeholder"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/person4NameTextViewId"
                            style="@style/cardViewTextView" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--Booking Medium Native Ad-->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/adTextId"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/this_is_an_ad_text"/>
            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/templateHomeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                style="@style/bodyBG"
                app:gnt_template_type="@layout/gnt_medium_template_view" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/global_banner_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>