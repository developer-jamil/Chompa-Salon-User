<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChampaSalon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">#121212</item>
        <!--text color-->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Background Style-->
    <style name="backgroundColor">
        <item name="android:background">@color/body_bg_night</item>
    </style>

    <style name="bodyBG">
        <item name="android:background">@color/body_bg_black</item>
    </style>
    <style name="bgBlackWhiteDialog">
        <item name="android:background">@color/black</item>
    </style>
    <style name="bgBlackWhite">
        <item name="android:background">@color/black</item>
    </style>
    <style name="item_text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="view_color">
        <item name="android:background">#252525</item>
    </style>

    <style name="head_bg_color">
        <item name="android:background">#FF131313</item>
    </style>
    <style name="about_card_view_bgTing">
        <item name="android:tint">#595959</item>
    </style>
    <style name="about_dev_style">
        <item name="android:background">#595959</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="about_details_style">
        <item name="android:background">@color/body_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>