<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChampaSalon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Background Style-->
    <style name="backgroundColor">
        <item name="android:background">@color/body_bg_day</item>
    </style>

    <style name="cardViewKStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!--UI Style-->
    <style name="cardViewLinearArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="cardViewPerson">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="cardViewImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="cardViewTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:text">@string/sample_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewEditButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="cardViewSingleButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="cardViewPersonEditPage">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
    </style>


    <style name="cardViewLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="cardViewImageViewStyle">
        <item name="android:layout_weight">7.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="cardViewTextViewStyle">
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#6C39B5</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pink_tint">
        <item name="tint">@color/pink</item>
    </style>


    <!--Home CardView Style-->
    <style name="HomeCardViewImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="HomeCardViewTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#272727</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:text">@string/sample_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bodyBG">
        <item name="android:background">@color/body_bg</item>
    </style>
    <style name="bgBlackWhiteDialog">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="bgBlackWhite">
        <item name="android:background">@color/white</item>
    </style>
    <style name="user_tint_style">
        <item name="android:tint">@color/dark_text</item>
    </style>
    <style name="item_text_color">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="view_color">
        <item name="android:textColor">@color/view_border_color</item>
    </style>

    <!--Craft Man Style-->
    <style name="craftCardViewPersonEditPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="craftImageView">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/image_placeholder</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="craftSaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:text">@string/save</item>
    </style>
    <style name="cardViewEnterNameEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:hint">@string/enter_your_name</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="craftProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="head_bg_color">
        <item name="android:background">@color/teal_700</item>
    </style>
    <!--Tab Layout All caps change-->
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="about_card_view_bgTing">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="about_dev_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="about_details_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_300sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="cardViewImageStyle">
        <item name="android:layout_weight">4.3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="this_is_an_ad_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/reg_forgot</item>
        <item name="android:text">@string/this_is_an_ad</item>
    </style>

</resources>